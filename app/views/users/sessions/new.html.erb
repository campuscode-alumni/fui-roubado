<div class="container">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "e-mail", class: 'form-control' } %>
      <%= f.input :password,
        required: false,
        input_html: { autocomplete: "senha atual", class: 'form-control' } %>
      <%= f.input :remember_me, as: :boolean, class: 'form-control' if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Enviar", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= render "users/shared/links" %>
  </div>
</div>
