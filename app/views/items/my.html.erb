<h1>Meus itens</h1>
<p class="text-info"><%= link_to 'Cadastrar item', new_item_path %><p>


<% @items.each do |item| %>
  <div class="card border-success mb-3" style="max-width: 20rem;">
    <div class="card-header"><%= link_to  item.title, item %></div>
    <div class="card-body">
      <% if item.photo.attached? %>
        <%= image_tag item.photo %>
      <% end %>
    </div>
  </div>
<% end %>