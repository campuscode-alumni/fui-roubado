<div class="container">
  <h1>Meus itens</h1>
  <%= link_to new_item_path, class: 'btn btn-info' do %>
    <%= icon 'fas', 'plus' %>
    Cadastrar item
  <% end %>

  <div class="mt-3">
    <div class="row">
      <% @items.each do |item| %>
        <div class="card border-<%=item.status%> mb-3 mr-3" style="width: 20rem;">
          <div class="card-header"><%= link_to  item.title, item %></div>
          <div class="card-body">
            <div>
              <% if item.photo.attached? %>
                <%= image_tag item.photo, class: 'w-100'  %>
              <% end %>
            </div>
          </div>
          <div class="card-footer">
            <%= link_to 'Ver detalhes', item, class: 'mt-3' %>
            <% if item.status == 'stolen' %>
              <span class="badge badge-danger">Roubado</span>
            <% else %>
              <span class="badge badge-success">OK</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
