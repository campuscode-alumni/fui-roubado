<div class="container">
  <h1>Resultados da busca</h1>
<% if @search_results.present? %>
  <% @search_results.each do |item| %>
      <%= item.item_type.name %>
      <%= item.registry_number %>
      <% if item.photo.attached?%>
        <p><%= image_tag item.photo, class: 'w-25 p-3' %></p>
      <% end %>

      <%= simple_form_for([item, @item_found]) do |f| %>
        <%= f.input :message, label: 'Paradeiro do item:' %>
        <%= f.input :email %>
        <%= f.submit 'Enviar para o proprietário' %>
      <% end %>
  <% end %>
<% else %>
  <p>O item procurado não está registrado como roubado ou furtado.</p>
<% end %>
</div>
