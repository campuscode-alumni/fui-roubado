<div class="container">
  <h1>Meus Relatórios</h1>
  <p class="text-info">
  <%= link_to new_report_path, class: 'btn btn-danger' do %>
    <%= icon 'fas', 'exclamation-triangle' %>
    Reportar roubo
  <% end %>
  </p>
  
  <div class="mt-3">
    <div class="row">
      <% @reports.each do |report| %>
          <div class="card border-secondary mb-3 mr-3" style="width: 20rem;">
            <div class="card-header">
              <%= link_to report.address, report %>
            </div>
            <div class="card-body">
              <p class="card-text"> Há <%= distance_of_time_in_words(report.ocurrance_date, Time.zone.now, include_seconds: true) %></p>
              <% if report.police_report.attached? %>
                <%= image_tag report.police_report, class: 'w-100' %>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
  
</div>
